<Context>

	<!-- Default set of monitored resources -->
	<WatchedResource>WEB-INF/web.xml</WatchedResource>

	<!-- Uncomment this to disable session persistence across Tomcat restarts -->
	<!-- <Manager pathname="" /> -->

	<!-- Uncomment this to enable Comet connection tacking (provides events 
		on session expiration as well as webapp lifecycle) -->
	<!-- <Valve className="org.apache.catalina.valves.CometConnectionManagerValve" 
		/> -->

	<ResourceLink name="jdbc/major_db" global="jdbc/major_db" type="javax.sql.DataSource"  />

	<Realm className="org.apache.catalina.realm.DataSourceRealm"  dataSourceName="jdbc/major_db"  
		roleNameCol="role_name" userCredCol="user_pass" userNameCol="user_name" 
		userRoleTable="member_user_roles" userTable="member_users"  >
	<!-- For 8.0 digest="MD5"  -->
		<CredentialHandler className="org.apache.catalina.realm.MessageDigestCredentialHandler" algorithm="MD5" />
	</Realm> 
</Context>